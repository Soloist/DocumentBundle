<?xml version="1.0" encoding="UTF-8" ?>

<routes xmlns="http://symfony.com/schema/routing"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/routing http://symfony.com/schema/routing/routing-1.0.xsd">

    <route id="soloist_document_admin_category_index" pattern="/admin/soloist/document/category/index">
        <default key="_controller">SoloistDocumentBundle:AdminCategory:index</default>
        <requirement key="_method">GET</requirement>
    </route>

    <route id="soloist_document_admin_category_new" pattern="/admin/soloist/document/category/new">
        <default key="_controller">SoloistDocumentBundle:AdminCategory:new</default>
        <requirement key="_method">GET</requirement>
    </route>

    <route id="soloist_document_admin_category_create" pattern="/admin/soloist/document/category/create">
        <default key="_controller">SoloistDocumentBundle:AdminCategory:create</default>
        <requirement key="_method">POST</requirement>
    </route>

    <route id="soloist_document_admin_category_edit" pattern="/admin/soloist/document/category/edit/{id}">
        <default key="_controller">SoloistDocumentBundle:AdminCategory:edit</default>
        <requirement key="_method">GET</requirement>
    </route>

    <route id="soloist_document_admin_category_update" pattern="/admin/soloist/document/category/update/{id}">
        <default key="_controller">SoloistDocumentBundle:AdminCategory:update</default>
        <requirement key="_method">POST</requirement>
    </route>

    <route id="soloist_document_admin_category_delete" pattern="/admin/soloist/document/category/delete/{id}">
        <default key="_controller">SoloistDocumentBundle:AdminCategory:delete</default>
        <requirement key="_method">GET</requirement>
    </route>
</routes>
