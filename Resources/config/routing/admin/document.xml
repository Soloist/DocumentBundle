<?xml version="1.0" encoding="UTF-8" ?>

<routes xmlns="http://symfony.com/schema/routing"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/routing http://symfony.com/schema/routing/routing-1.0.xsd">

    <route id="soloist_document_admin_document_index" pattern="/admin/soloist/document/document/index">
        <default key="_controller">SoloistDocumentBundle:AdminDocument:index</default>
        <requirement key="_method">GET</requirement>
    </route>

    <route id="soloist_document_admin_document_new" pattern="/admin/soloist/document/document/new">
        <default key="_controller">SoloistDocumentBundle:AdminDocument:new</default>
        <requirement key="_method">GET</requirement>
    </route>

    <route id="soloist_document_admin_document_create" pattern="/admin/soloist/document/document/create">
        <default key="_controller">SoloistDocumentBundle:AdminDocument:create</default>
        <requirement key="_method">POST</requirement>
    </route>

    <route id="soloist_document_admin_document_edit" pattern="/admin/soloist/document/document/edit/{id}">
        <default key="_controller">SoloistDocumentBundle:AdminDocument:edit</default>
        <requirement key="_method">GET</requirement>
    </route>

    <route id="soloist_document_admin_document_update" pattern="/admin/soloist/document/document/update/{id}">
        <default key="_controller">SoloistDocumentBundle:AdminDocument:update</default>
        <requirement key="_method">POST</requirement>
    </route>

    <route id="soloist_document_admin_document_delete" pattern="/admin/soloist/document/document/delete/{id}">
        <default key="_controller">SoloistDocumentBundle:AdminDocument:delete</default>
        <requirement key="_method">GET</requirement>
    </route>
</routes>
